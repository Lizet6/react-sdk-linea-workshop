{
  "name": "chain",
  "main": "typechain/index.ts",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "npx hardhat compile && node scripts/generate_types.js",
    "compile": "npx hardhat compile",
    "migrate": "truffle migrate",
    "test": "truffle test",
    "local": "truffle develop --log",
